@model WebApp.Models.AppointmentDetails

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentDetailsID" />
            <div class="form-group">
                <label class="control-label">Clinic ID</label>
                <select asp-for="PolyclinicID" class="form-control" asp-items="ViewBag.PolyclinicID"></select>
                <span asp-validation-for="PolyclinicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Day</label>
                <select asp-for="DayID" class="form-control" asp-items="ViewBag.DayID"></select>
                <span asp-validation-for="DayID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Time</label>
                <select asp-for="HourID" class="form-control" asp-items="ViewBag.HourID"></select>
                <span asp-validation-for="HourID" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DateStatus" /> Appointment Status
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
