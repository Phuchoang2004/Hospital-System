@model IEnumerable<WebApp.Models.AppointmentDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Polyclinics)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day.DayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour.DateHouri)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Polyclinics.PolyclinicName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppointmentDetailsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AppointmentDetailsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentDetailsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
