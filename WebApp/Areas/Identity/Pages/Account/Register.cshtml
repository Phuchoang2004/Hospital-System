@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<div class="login-box">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create New Member</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="user-box">
                <input asp-for="Input.Name" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="Input.Name">First Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="user-box">
                <input asp-for="Input.Surname" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="Input.Surname">Last name</label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>

            <div class="user-box">
                <input asp-for="Input.Nameres" class="form-control" autocomplete="" aria-required="true" />
                <label asp-for="Input.Nameres">Address</label>
                <span asp-validation-for="Input.Nameres" class="text-danger"></span>
            </div>


            
            <div class="user-box">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Sign Up</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
