@model IEnumerable<WebApp.Models.User>

<div class="container my-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Patient List
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var patient in Model)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="col-12 pt-md-3" style="align-content">
                                <h5 class="text-uppercase text-secondary"><strong>Patient Name: @patient.Name</strong></h5>
                                <h5 class="text-uppercase text-secondary"><strong>Name: @patient.Name @patient.Surname</strong></h5>
                                <p><small>Email: @patient.Email</small></p>
                            </div>
                            <div class="row-cols-2">
                                <a asp-controller="Doctor" asp-action="ViewRecord" asp-route-id="@patient.Id">View</a> |
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4">
                        <p class="text-muted">No patients available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>