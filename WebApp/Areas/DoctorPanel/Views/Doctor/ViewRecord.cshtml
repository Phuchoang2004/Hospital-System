@model IEnumerable<WebApp.Models.MedicalRecord>

<div class="container my-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-8">
                    <h5 class="pt-2 text-white">
                        Medical History
                    </h5>
                </div>
                <div class="col-4 text-right" style="padding-left:200px">
                    <a asp-controller="Doctor" asp-action="AddRecord" asp-route-userId="@ViewBag.UserId" class="btn btn-primary">
                        Add Medical Record
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var record in Model)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="col-12 pt-md-3" style="align-content">
                                <h5 class="text-uppercase text-secondary"><strong>Record ID: @record.ID</strong></h5>
                                <h5 class="text-uppercase text-secondary"><strong>Name: @record.User.Name</strong></h5>
                                <p><small>@Html.Raw(record.Detail)</small></p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4">
                        <p class="text-muted">No medical records available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>